<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrowback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Help Text -->
    <TextView
        android:id="@+id/help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="#00AA00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Your Account Section -->
    <TextView
        android:id="@+id/account_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button" />

    <!-- Personal Information (Profile Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/personal_info_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/person"
        app:layout_constraintTop_toBottomOf="@id/account_section"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/personal_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Personal information"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/personal_info_icon"
        app:layout_constraintBottom_toBottomOf="@id/personal_info_icon"
        app:layout_constraintStart_toEndOf="@id/personal_info_icon"
        app:layout_constraintEnd_toStartOf="@id/personal_info_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/personal_info_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/personal_info_icon"
        app:layout_constraintBottom_toBottomOf="@id/personal_info_icon" />

    <!-- Notifications -->
    <ImageView
        android:id="@+id/notifications_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/notifications_24dp_000000_fill0_wght400_grad0_opsz24"
        app:layout_constraintTop_toBottomOf="@id/personal_info_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/notifications_icon"
        app:layout_constraintBottom_toBottomOf="@id/notifications_icon"
        app:layout_constraintStart_toEndOf="@id/notifications_icon"
        app:layout_constraintEnd_toStartOf="@id/notifications_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/notifications_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/notifications_icon"
        app:layout_constraintBottom_toBottomOf="@id/notifications_icon" />

    <!-- Card and Accounts (Card Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_card"
        app:layout_constraintTop_toBottomOf="@id/notifications_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/card_accounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Card and accounts"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/card_icon"
        app:layout_constraintBottom_toBottomOf="@id/card_icon"
        app:layout_constraintStart_toEndOf="@id/card_icon"
        app:layout_constraintEnd_toStartOf="@id/card_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/card_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_icon"
        app:layout_constraintBottom_toBottomOf="@id/card_icon" />

    <!-- Saved Addresses (Location Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/saved_address_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@id/card_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/saved_addresses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saved addresses"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/saved_address_icon"
        app:layout_constraintBottom_toBottomOf="@id/saved_address_icon"
        app:layout_constraintStart_toEndOf="@id/saved_address_icon"
        app:layout_constraintEnd_toStartOf="@id/saved_addresses_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/saved_addresses_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/saved_address_icon"
        app:layout_constraintBottom_toBottomOf="@id/saved_address_icon" />

    <!-- Manage Business Profile -->
    <ImageView
        android:id="@+id/business_profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_manage"
        app:layout_constraintTop_toBottomOf="@id/saved_address_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/manage_business_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage business profile"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/business_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/business_profile_icon"
        app:layout_constraintStart_toEndOf="@id/business_profile_icon"
        app:layout_constraintEnd_toStartOf="@id/business_profile_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/business_profile_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/business_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/business_profile_icon" />

    <!-- Benefits Section -->
    <TextView
        android:id="@+id/benefits_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefits"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/manage_business_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Rewards (Rewards Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/rewards_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_rewards"
        app:layout_constraintTop_toBottomOf="@id/benefits_section"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/rewards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/rewards_icon"
        app:layout_constraintBottom_toBottomOf="@id/rewards_icon"
        app:layout_constraintStart_toEndOf="@id/rewards_icon"
        app:layout_constraintEnd_toStartOf="@id/rewards_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/rewards_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rewards_icon"
        app:layout_constraintBottom_toBottomOf="@id/rewards_icon" />

    <!-- Support Section -->
    <TextView
        android:id="@+id/support_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/rewards"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Help (Help Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_help"
        app:layout_constraintTop_toBottomOf="@id/support_section"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/help_icon"
        app:layout_constraintBottom_toBottomOf="@id/help_icon"
        app:layout_constraintStart_toEndOf="@id/help_icon"
        app:layout_constraintEnd_toStartOf="@id/help_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/help_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/help_icon"
        app:layout_constraintBottom_toBottomOf="@id/help_icon" />

    <!-- Rate the App (Rate Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/rate_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toBottomOf="@id/help_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/rate_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rate the app"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/rate_app_icon"
        app:layout_constraintBottom_toBottomOf="@id/rate_app_icon"
        app:layout_constraintStart_toEndOf="@id/rate_app_icon"
        app:layout_constraintEnd_toStartOf="@id/rate_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/rate_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rate_app_icon"
        app:layout_constraintBottom_toBottomOf="@id/rate_app_icon" />

    <!-- Become a Captain (Captain Icon, Text, and Forward Arrow) -->
    <ImageView
        android:id="@+id/become_captain_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_captain"
        app:layout_constraintTop_toBottomOf="@id/rate_app_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/become_captain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Become a Captain"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/become_captain_icon"
        app:layout_constraintBottom_toBottomOf="@id/become_captain_icon"
        app:layout_constraintStart_toEndOf="@id/become_captain_icon"
        app:layout_constraintEnd_toStartOf="@id/captain_forward"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/captain_forward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrowforward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/become_captain_icon"
        app:layout_constraintBottom_toBottomOf="@id/become_captain_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
